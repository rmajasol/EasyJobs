= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, "Job Title"
    = f.text_field :title
  .field
    = f.label :description, "Job Description"
    = f.text_area :description
  .field
    = f.label :company_name, "Company Name"
    = f.text_field :company_name
  .field
    = f.label :details_link, "Details Link (optional)"
    = f.text_field :details_link
  .actions
    = f.submit 'Save'
